#!/bin/bash
# --Generate Wordsmith epub --
############################################################################################
# Configure your project by editing $HOME/.scripts/gen_wordsmith_profile -- not HERE! Nothing should change here except bug fixesesese
# i.e. DO NOT EDIT THIS FILE unless you know what you're doing!

echo " -== [ GENERATING EPUB ] ==- "

cd $MANU_DIR

wordsmith g epub \
&& echo "Moving $TITLE.epub to $SYNC_ROOT/WIPs/$MANUSCRIPT/epub...." \
&& mv final/$TITLE*.epub $SYNC_ROOT/WIPs/$MANUSCRIPT/epub/$TITLE-$DATE.epub \
&& echo "--== Finished! $MANUSCRIPT.epub moved to $SYNC_ROOT/WIPs/$MANUSCRIPT/epub ==--"
